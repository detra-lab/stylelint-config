{
  "name": "@detra-lab/stylelint-config",
  "version": "0.1.0",
  "description": "Modular and opinionated Stylelint configuration with support for CSS, PostCSS, SASS language, and CSS in JS solutions.",
  "license": "MIT",
  "author": {
    "name": "Detra",
    "email": "detra.lab@pm.me",
    "homepage": "https://github.com/detra-lab"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/detra-lab/stylelint-config.git"
  },
  "bugs": {
    "url": "https://github.com/detra-lab/stylelint-config/issues"
  },
  "engines": {
    "node": "16.x || 18.x",
    "npm": "8.x || 9.x"
  },
  "publishConfig": {
    "access": "public"
  },
  "main": "index.js",
  "types": "types/index.d.ts",
  "files": [
    "/index.js",
    "/sass.js",
    "/styled.js",
    "/core/",
    "/types/"
  ],
  "prettier": "@detra-lab/prettier-config",
  "scripts": {
    "check:tsc": "tsc --noEmit",
    "check:src": "eslint . --ext .js,.ts --ignore-path .gitignore",
    "check": "run-p -cln check:*",
    "test:css": "stylelint ./tests/*.css -c ./tests/.stylelintrc.css.js",
    "test:sass": "stylelint ./tests/*.scss -c ./tests/.stylelintrc.sass.js",
    "test:styled": "stylelint ./tests/*.{ts,js} -c ./tests/.stylelintrc.styled.js",
    "pretest": "npm run build",
    "test": "run-p -cln test:*",
    "prebuild": "del ./*.js ./core ./types",
    "build": "tsc"
  },
  "devDependencies": {
    "@evilmartians/lefthook": "^1.3.0",
    "@detra-lab/eslint-config": "^0.1.0",
    "@detra-lab/prettier-config": "^0.1.0",
    "@detra-lab/tsc": "^0.1.0",
    "del-cli": "^5.0.0",
    "eslint": "^8.39.0",
    "npm-run-all": "^4.1.0",
    "postcss-scss": "^4.0.0",
    "postcss-styled-syntax": "^0.4.0",
    "prettier": "^2.8.0",
    "stylelint": "^15.6.0",
    "stylelint-scss": "^5.0.0",
    "typescript": "^5.0.0"
  },
  "dependencies": {
    "postcss-syntax": "0.36.2",
    "stylelint-declaration-block-no-ignored-properties": "2.7.0",
    "stylelint-order": "6.0.3"
  },
  "peerDependencies": {
    "postcss-scss": "^4.0.0",
    "postcss-styled-syntax": "^0.4.0",
    "stylelint": "^15.6.0",
    "stylelint-scss": "^5.0.0"
  },
  "peerDependenciesMeta": {
    "postcss-scss": {
      "optional": true
    },
    "postcss-styled-syntax": {
      "optional": true
    },
    "stylelint-scss": {
      "optional": true
    }
  },
  "keywords": [
    "linter",
    "postcss",
    "stylelint",
    "stylelint-config"
  ]
}
